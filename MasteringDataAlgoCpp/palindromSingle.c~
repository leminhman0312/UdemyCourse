
#include <stdio.h>

void secondMethod(char *A){
    int i, j;
    char temp;
    for (j = 0; A[j] != '\0'  ; j++) {
    }
    j = j - 1;
    for (i = 0; i < j ; i++,j--) {
    temp = A[i];
    A[i] = A[j];
    A[j] = temp;
    }
}

void palindromeSingle(char *A){
    int i, j;
    i = 0;
    /* Find out stopping  index */
    for (int j = 0; A[j] != '\0'  ; j++) {
    }
    j = j-1;

    while (i != j || i < j) {
    if (A[i] == A[j]) {
	i++;
	j--;
    }
    }
    printf("%d\t%d\n",i,j );


}


